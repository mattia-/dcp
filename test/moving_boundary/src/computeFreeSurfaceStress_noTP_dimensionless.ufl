# UFL file to compute the surface tension stresses on a free surface
# (labelled by 1)
#

cell = triangle
V = VectorElement ("Lagrange", cell, 2)
Q = FiniteElement ("Lagrange", cell, 1)
T = V * Q

up = Coefficient (T)
test = TestFunction (T)

u, p = split (up)
v, q = split (test)
dt = Constant (cell)
reynoldsNr = Constant (cell)
capillaryNr = Constant (cell)
n = FacetNormal(cell)
h = MaxFacetEdgeLength(cell)
beta = Constant (cell)

#th = pi/2
#A = as_matrix([[cos(th) , -sin(th)] , [sin(th) , cos(th)]])
A = as_matrix ([ [0 , -1] , [1 , 0] ])

# OPPOSITE w.r.t. myNavierstokesTimeCurv.ufl
# because there we move this term to the lhs
L =  - dt * 1/(reynoldsNr*capillaryNr) * div (v) * ds(1) \
     + dt * 1/(reynoldsNr*capillaryNr) * inner (grad(v), outer (n,n)) * ds(1) \
     - dt * 1/(reynoldsNr*capillaryNr) * div (v) * ds(4) \
     + dt * 1/(reynoldsNr*capillaryNr) * inner (grad(v), outer (n,n)) * ds(4) \
     - dt * 1/(reynoldsNr*capillaryNr) * div (v) * ds(5) \
     + dt * 1/(reynoldsNr*capillaryNr) * inner (grad(v), outer (n,n)) * ds(5) \
     - dt * beta * inner (u, v) * ds(2) 
