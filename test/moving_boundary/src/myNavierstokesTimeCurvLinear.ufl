# UFL file for time dependent, moving domain (ALE) Navier-Stokes simulation
#
# define mesh dimension
cell = triangle

# define function spaces
V = VectorElement ("Lagrange", cell, 2)
Q = FiniteElement ("Lagrange", cell, 1)
T = V * Q

# define test and trial functions
trial = TrialFunction (T)
test = TestFunction (T)

u, p = split (trial)
v, q = split (test)

# define coefficients
nu = Constant (cell)
gamma = Constant (cell)
dt = Constant (cell)
n = FacetNormal(cell)
h = MaxFacetEdgeLength(cell)
u_old = Coefficient (V)
w = Coefficient(V)
beta = Constant (cell)
stressAbove = Coefficient (V)
dummy, normalStressAbove = split (stressAbove)
stressBelow = Coefficient (V)
gravityVersor = VectorConstant (cell)
wallVelocity = Coefficient (V)

#th = pi/2
#A = as_matrix([[cos(th) , -sin(th)] , [sin(th) , cos(th)]])
A = as_matrix ([ [0 , -1] , [1 , 0] ])

# define bilinear form
a = inner (u, v) * dx \
    + dt * nu/2.0 * inner (grad (u)+nabla_grad(u), grad (v)+nabla_grad(v)) * dx \
    + dt * inner (dot (grad (u), u_old), v) * dx \
    - inner (dot (grad (u), w), v) * dx \
    - div (w) * inner (u, v) * dx \
    - dt * inner (p, div (v)) * dx \
    - dt * inner (div (u), q) * dx \
    + dt * beta * inner (u, v) * ds(3) \
    + dt * 0.5 * div (u_old) * inner (u, v) * dx \
    - 0.5 * dot (dt*u_old-w, n) * inner (u, v) * ds(1)
#-outer NON SI PUO'    + gamma * dt * tr ((Identity-outer(n,n)) * grad(v))  * ds(1)
# last 2 lines: stabilization [GerbeauLeli√®vre2009]

# define linear form
L = inner (u_old, v) * dx \
    + dt * 9.81 * inner(gravityVersor, v) * dx \
    - dt * gamma * div (v) * ds(1) \
    + dt * gamma * inner (grad(v), outer (n,n)) * ds(1) \
    + dt * beta * inner (wallVelocity, v) * ds(3) \
    + dt * inner (normalStressAbove*n, v) * ds(1) \
    + dt * inner (stressBelow, v) * ds(2)
