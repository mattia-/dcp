# UFL file for time dependent, moving domain (ALE) Navier-Stokes simulation
#
# define mesh dimension
cell = triangle

# define function spaces
V = VectorElement ("Lagrange", cell, 2)
Q = FiniteElement ("Lagrange", cell, 1)
T = V * Q

# define test and trial functions
trial = Coefficient (T)
test = TestFunction (T)

u, p = split (trial)
v, q = split (test)

# define coefficients
reynoldsNr = Constant (cell)
stokesNr = Constant (cell)
capillaryNr = Constant (cell)
dt = Constant (cell)
n = FacetNormal(cell)
h = MaxFacetEdgeLength(cell)
u_old = Coefficient (V)
w = Coefficient(V)
beta = Constant (cell)
stressAbove = Coefficient (V)
dummy, normalStressAbove = split (stressAbove)
stressBelow = Coefficient (V)
gravityVersor = VectorConstant (cell)
wallVelocity = VectorConstant (cell)

#th = pi/2
#A = as_matrix([[cos(th) , -sin(th)] , [sin(th) , cos(th)]])
A = as_matrix ([ [0 , -1] , [1 , 0] ])

# define non linear equation
F = inner (u, v) * dx \
    - inner (u_old, v) * dx \
    + dt * 0.5/reynoldsNr * inner (grad (u)+nabla_grad(u), grad (v)+nabla_grad(v)) * dx \
    + dt * inner (dot (grad (u), u), v) * dx \
    - inner (dot (grad (u), w), v) * dx \
    - dt * 1/reynoldsNr * inner (p, div (v)) * dx \
    - dt * 1/reynoldsNr * inner (div (u), q) * dx \
    - dt * stokesNr/reynoldsNr * inner(gravityVersor, v) * dx \
    + dt * 1/(reynoldsNr*capillaryNr) * div (v) * ds(1) \
    - dt * 1/(reynoldsNr*capillaryNr) * inner (grad(v), outer (n,n)) * ds(1) \
    + dt * beta * inner (u, v) * ds(2) \
    - dt * beta * inner (wallVelocity, v) * ds(2) \
    - dt * inner (normalStressAbove*n, v) * ds(1) \
    - dt * inner (stressBelow, v) * ds(3) \
    + dt * 0.5 * div (u_old) * inner (u, v) * dx \
    + dt * 0.5 * inner (u_old, n) * inner (u, v) * ds(1) \
    - dt * 0.5 * inner (w, n) * inner (u, v) * ds(1)
#-outer NON SI PUO'    + gamma * dt * tr ((Identity-outer(n,n)) * grad(v))  * ds(1)

# define test and trial function for jacobian
dtrial = TrialFunction (T)
du, dp = split (dtrial)

# define jacobian
J = derivative (F,trial,dtrial)
