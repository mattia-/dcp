# UFL file for Navier-Stokes adjoint
#
# define mesh dimension
cell = triangle

# define function spaces
W = FiniteElement ("Lagrange", cell, 1)

# define test and trial functions
w = TrialFunction (W)
z = TestFunction (W)

# define coefficients
u = Coefficient (W)
u_0 = Coefficient (W)

# bilinear form
a = inner (grad (w), grad (z)) * dx

# linear form
L = inner (u_0 - u, z) * dx (1)
