# UFL file for definition of objective functional
#
# define mesh dimension
cell = triangle

# define function spaces
V = VectorElement ("Lagrange", cell, 2)
Q = FiniteElement ("Lagrange", cell, 1)

# define coefficients
sigma_1 = Constant (cell)
sigma_2 = Constant (cell)
u = Coefficient (V)
U = Coefficient (V)
p = Coefficient (Q)
P = Coefficient (Q)
g = Coefficient (Q)

# define expression of functional
J = 0.5 * inner (u - U, u - U) * dx (1) \
    + 0.5 * inner (p - P, p - P) * dx (1) \
    + 0.5 * sigma_1 * inner (g, g) * ds (2) \
    + 0.5 * sigma_2 * inner (grad (g), grad (g)) * ds (2)

# velocity component of the functional
J_u = 0.5 * inner (u - U, u - U) * dx (1)

# pressure component of the functional
J_p = 0.5 * inner (p - P, p - P) * dx (1)

# control component of the functional
J_g = 0.5 * sigma_1 * inner (g, g) * ds (2)

# control derivative component of the functional
J_gDer = 0.5 * sigma_2 * inner (grad (g), grad (g)) * ds (2)

# add functional to list of forms
forms = [J, J_u, J_p, J_g, J_gDer]
