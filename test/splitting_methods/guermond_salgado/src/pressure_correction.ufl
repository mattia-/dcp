# third step of the Guermond-Salgado splitting method

# domain type
cell = triangle

# function spaces
V = VectorElement ("Lagrange", cell, 2)
Q = FiniteElement ("Lagrange", cell, 1)

# coefficients
dt = Constant (cell)
chi = Constant (cell)
u = Coefficient (V)
    
# test and trial functions
phi = TrialFunction (Q)
psi = TestFunction (Q)
    
# pressure correction equation
# lhs
a = - inner (grad (phi), grad (psi)) * dx

# rhs
L = chi / dt * inner (div (u), psi) * dx
