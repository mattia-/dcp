# fourth step of the Guermond-Salgado splitting method

# domain type
cell = triangle

# function spaces
Q = FiniteElement ("Lagrange", cell, 1)

# coefficients
phi = Coefficient (Q)
p_old = Coefficient (Q)
    
# test and trial functions
p = TrialFunction (Q)
q = TestFunction (Q)

# pressure update equation
# lhs
a = inner (p, q) * dx

# rhs
L = inner (p_old, q) * dx + inner (phi, q) * dx
